<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef ParentName="GrenadeRecipeBase">
    <defName>ST_Make_Promethiumtank</defName>
    <label>Fill a promethium tank</label>
    <description>Craft a promethim tank.</description>
    <jobString>Making Promethium tank</jobString>
    <workAmount>600</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Prometheum</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Prometheum</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Strain_Gastank>1</Strain_Gastank>
    </products>
  </RecipeDef>
  
  <RecipeDef ParentName="GrenadeRecipeBase">
