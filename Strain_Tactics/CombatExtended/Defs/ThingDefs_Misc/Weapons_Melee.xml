<Defs>

<!-- ==================== Combat Knife ==================== -->
    
    <ThingDef ParentName="Strain_MakeableMelee">
        <defName>Strain_CombatKnife</defName>
        <label>Combat Knife</label>
        <description>Perfectly balanced and can cause severe hemorrhaging. It weighs almost nothing.</description>
        <graphicData>
            <texPath>Things/Weapons/Melee_Knife</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <techLevel>Medieval</techLevel>
        <weaponTags>
            <li>CE_Sidearm_Melee</li>
            <li>CE_OneHandedWeapon</li>
        </weaponTags>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <statBases>
            <WorkToMake>4000</WorkToMake>
            <Mass>0.3</Mass>
            <Bulk>1</Bulk>
            <MeleeCounterParryBonus>0.28</MeleeCounterParryBonus>
        </statBases>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>handle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>2</power>
                <cooldownTime>0.74</cooldownTime>
                <armorPenetrationBlunt>0.338</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>blade</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>11</power>
                <cooldownTime>0.67</cooldownTime>
                <armorPenetrationBlunt>0.486</armorPenetrationBlunt>
                <armorPenetrationSharp>0.87</armorPenetrationSharp>
                <linkedBodyPartsGroup>Blade</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>12</power>
                <cooldownTime>0.74</cooldownTime>
                <chanceFactor>1.33</chanceFactor>
                <armorPenetrationBlunt>0.338</armorPenetrationBlunt>
                <armorPenetrationSharp>1.13</armorPenetrationSharp>
                <linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
            </li>
        </tools>
        <recipeMaker>
            <researchPrerequisite>ST_melee</researchPrerequisite>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <equippedStatOffsets>
            <MeleeCritChance>0.83</MeleeCritChance>
            <MeleeParryChance>0.28</MeleeParryChance>
            <MeleeDodgeChance>0.06</MeleeDodgeChance>	
        </equippedStatOffsets>
        <modExtensions>
            <li Class="CombatExtended.GunDrawExtension">
                <DrawSize>1.50,1.50</DrawSize>
                <DrawOffset>0.00,0.00</DrawOffset>
            </li>
        </modExtensions>
    </ThingDef>

